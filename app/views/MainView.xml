<Alloy>
	<View id="vwMain" >
		<View id="vwTopOptions">

			<View id="vwCityOptions" zIndex="199" class="padding_top">
				<ImageView id="select_lv" class="padding_top"></ImageView>
				<ImageView id="select_ap" class="padding_top"></ImageView>
			</View>
			<View class="vertical_layout nav_bgs" id="las_vegas_nav" backgroundImage='/icons/bg_nav.png'>
				<View class="option_groups" top="60dp">
					<View id="lineup_action" class="options_image" width="160dp" backgroundImage="/icons/lineup.png"></View>
					<View id="club_shows_action" class="options_image" width="140dp" left="10dp" backgroundImage="/icons/club_shows.png"></View>
				</View>
				<View class="option_groups">
					<View id="bands_action" class="options_image" width="100dp" backgroundImage="/icons/bands.png"></View>
					<View id="my_schedule_action" class="options_image" width="150dp" left="10dp" backgroundImage="/icons/my_schedule.png"></View>
				</View>
				<View class="option_groups">
					<View id="book_hotels_action" class="options_image" width="160dp" backgroundImage="/icons/book_hotels.png"></View>
					<View id="merch_action" class="options_image" width="100dp" left="10dp" backgroundImage="/icons/merch.png"></View>
				</View>
				<View class="option_groups">
					<View id="news_action" class="options_image" width="150dp" backgroundImage="/icons/news.png"></View>
					<View id="bowling_action" class="options_image" width="120dp" left="10dp" backgroundImage="/icons/bowling.png"></View>
				</View>
				<View class="option_groups">
					<View id="sponsors_action" class="options_image" width="150dp" backgroundImage="/icons/sponsors.png"></View>
					<View id="food_vendors_action" class="options_image" width="170dp" left="10dp" backgroundImage="/icons/food_vendors.png"></View>
				</View>
				<View class="option_groups padding_top">
					<View id="buy_tickets_action" class="options_image" width="150dp" backgroundImage="/icons/buy_tickets.png"></View>
				</View>
			</View>
			<View class="vertical_layout nav_bgs" id="asbury_park_nav" backgroundImage='/icons/asbury_park_bg.png'>
				<ImageView id="ap_linup"></ImageView>
				<ImageView id="ap_club_shows"></ImageView>
				<ImageView id="ap_bands"></ImageView>
				<ImageView id="ap_my_schedule"></ImageView>
				<ImageView id="ap_bowling"></ImageView>
				<ImageView id="ap_news"></ImageView>
				<ImageView id="ap_buy_tickets"></ImageView>
			</View>
		</View>
		<Require id="sponsor" src="misc/sponsorAd" addBanner="true" screen="mainNav"/>
	</View>
</Alloy>