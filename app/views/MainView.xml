<Alloy>
	<View id="vwMain">
		<View id="vwTopOptions">

			<Label id="title" class="frizQuaT" />
			
			<View id="bands_view" class="absolute_layout options_view padding_top" onClick="nsLanding.getBands">
				<Label class="options_lbl lbl_settings knowYourProduct touch_false" id="lblBands" text="L('bands').toUpperCase()"></Label>
			</View>
			<View id="events_view" class="absolute_layout options_view padding_top" onClick="nsLanding.getEvents">
				<Label class="options_lbl lbl_settings knowYourProduct touch_false" id="lblEvents" text="L('events').toUpperCase()"></Label>
			</View>
			<View id="schedule_view" class="absolute_layout options_view padding_top" onClick="nsLanding.getSchedule">
				<Label class="options_lbl lbl_settings knowYourProduct touch_false" id="lblSchedule" text="L('my_schedule').toUpperCase()"></Label>
			</View>
			<View id="venues_view" class="absolute_layout options_view padding_top" onClick="nsLanding.getVenues">
				<Label class="options_lbl lbl_settings knowYourProduct touch_false" id="lblVenues" text="L('buy_tickets').toUpperCase()"></Label>
			</View>
			<View id="news_view" class="absolute_layout options_view padding_top" onClick="nsLanding.getNews">
				<Label class="options_lbl lbl_settings knowYourProduct touch_false" id="lblNews" text="L('news_social').toUpperCase()"></Label>
			</View>
			<View id="food_view" class="absolute_layout options_view padding_top" onClick="nsLanding.getFood">
				<Label class="options_lbl lbl_settings knowYourProduct touch_false" id="lblFood" text="L('food').toUpperCase()"></Label>
			</View>

		</View>
		<Require id="sponsor" src="misc/sponsorAd" />
	</View>
</Alloy>