<Alloy>
	<View id="vwMain">
		<View class="vertical_layout padding_top">
			<View id="vwTopYellow">
				<Label id="lblYourSchedule" class="knowYourProduct" text="L('my_schedule').toUpperCase()"></Label>
			</View>
			<View id="vwDays" class="vwDaysClass">
