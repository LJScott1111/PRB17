<Alloy>
	<View class="container" backgroundImage='icons/distress_bg.png'>
		<Label id="back" class="fontawesome back-button padding_left padding_top layout_size"></Label>
		<View layout="vertical">
			<View id="username_view" class="vertical_layout padding_top">

				<Label class="fieldLabels padding_top" text="L('name')"></Label>
				<TextField id="nameField" class="tfClass" hintText="L('name')"></TextField>
				<Label class="fieldLabels padding_top" text="L('email')"></Label>
				<TextField id="emailField" class="tfClass" hintText="L('index_tfEmail')" keyboardType="Titanium.UI.KEYBOARD_TYPE_EMAIL"></TextField>
				<Button title="L('save')" id="save" class="btnClass"></Button>
			</View>
			<Label id="no_email_message" text="L('no_email_message')"></Label>
		</View>
	</View>
</Alloy>