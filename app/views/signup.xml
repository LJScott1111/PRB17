<Alloy>
	<Window id="winIndex">
		<!-- <Require src="header" screenId="winIndex" onSettings="nsIndex.getSettings"></Require> -->
		<View id="vwMain">
			<View id="vwTopLogin">

				<Label id="login_message" class="padding_bottom"></Label>
				<View class="absolute_layout padding_top">
					<TextField id="emailField" class="tfClass" keyboardType="Titanium.UI.KEYBOARD_TYPE_EMAIL"></TextField>
					<Label class="lblClass" text="L('index_tfEmail')" id="lblHint_email"></Label>
				</View>
				
				<View class="absolute_layout padding_top">
					<TextField id="passwordField" passwordMask="true" class="tfClass"></TextField>
					<Label class="lblClass" text="L('index_tfPassword')" id="lblHint_pass"></Label>
				</View>
				
				<Button id="btnLogin" class="btnClass" title="L('index_lblGetIt').toUpperCase()" onClick="nsIndex.login"></Button>
				<Button id="btnSkip" class="btnClass" title="L('index_lblSkip').toUpperCase()" onClick="nsIndex.skipSignUp"></Button>
				<!-- <Label id="lblOr" text="L('index_lblOr')"></Label>
				<Button id="btnFbConnect" class="btnClass" title="L('index_lblFbConnect')" onClick="nsIndex.connectToFb"></Button> -->
			</View>
		</View>
		<View id="indicatorView" class="absolute_layout">
			<ActivityIndicator id="activityIndicator"></ActivityIndicator>
			<Label id="user_exists_msg" text="L('user_exists_msg')"></Label>
		</View>
	</Window>
</Alloy>